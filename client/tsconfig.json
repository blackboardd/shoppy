{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "module": "esnext",
    "rootDir": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitThis": true,
    "skipLibCheck": true
  }
}
